{
  "version": 2,
  "configurePresets": [
    {
      "name": "common",
      "hidden": true,
      "cacheVariables": {
        "UP_OUTPUT_DIR": "${sourceDir}/out",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "FETCHCONTENT_QUIET": true
      },
      "binaryDir": "${sourceDir}/out/${presetName}",
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "windows-msvc",
      "hidden": true,
      "inherits": "common",
      "environment": {
        "UP_CXXFLAGS": "/W3 /WX /w34295 /w34189",
        "CXXFLAGS": "/FC /Zi"
      },
      "cacheVariables": {
        "FETCHCONTENT_BASE_DIR": "${sourceDir}/out/deps/windows",
        "BUILD_SHARED_LIBS": true,
        "CMAKE_CXX_FLAGS_DEBUG": "$env{CXXFLAGS} /Od /Ob1"
      },
      "vendor": { "microsoft.com/VisualStudioSettings/CMake/1.0": { "hostOS": "Windows" } }
    },
    {
      "name": "windows-msvc-shared",
      "displayName": "Windows MSVC (Shared)",
      "inherits": "windows-msvc"
    },
    {
      "name": "windows-msvc-static",
      "displayName": "Windows MSVC (Static)",
      "inherits": "windows-msvc"
    },
    {
      "name": "wsl-gcc",
      "hidden": true,
      "environment": {
        "UP_CXXFLAGS": "-Wall -Werror",
        "CXXFLAGS": "-fcoroutines -mssse3 -Wno-volatile -Wno-maybe-uninitialized -Wno-deprecated-enum-enum-conversion -Wno-unknown-attributes",
        "CXX": "g++-11",
        "CC": "gcc-11"
      },
      "cacheVariables": {
        "FETCHCONTENT_BASE_DIR": "${sourceDir}/out/deps/linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": "Linux",
          "intelliSenseMode": "linux-gcc-x64"
        }
      }
    },
    {
      "name": "wsl-clang",
      "hidden": true,
      "environment": {
        "UP_CXXFLAGS": "-Wall -Werror",
        "CXXFLAGS": "-stdlib=libc++ -fdiagnostics-absolute-paths -mssse3 -Wno-deprecated-volatile -Wno-deprecated-enum-enum-conversion -Wno-unknown-attributes",
        "CXX": "clang++-12",
        "CC": "clang-12"
      },
      "cacheVariables": {
        "FETCHCONTENT_BASE_DIR": "${sourceDir}/out/deps/linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": "Linux",
          "intelliSenseMode": "linux-gcc-x64"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-msvc-static-debug",
      "displayName": "Debug",
