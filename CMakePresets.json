      "configuration": "Debug"
    },
    {
      "name": "windows-msvc-shared-release",
      "displayName": "Release",
      "configurePreset": "windows-msvc-shared",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "wsl-gcc-default",
      "displayName": "Default",
      "configurePreset": "wsl-gcc",
      "configuration": "Debug"
    },
    {
      "name": "wsl-clang-default",
